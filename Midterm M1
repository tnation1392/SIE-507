def display(carpark_dataset):
    print(carpark_dataset.read())
def statistics(file):
    with open(file, 'r') as cp:
        contents = cp.read()
        X = 0
        for n in contents:
            if n == "X":
                X += 1
        print(X)
        occupied = round((X/80)*100, 1)
        print(occupied)

